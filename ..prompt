test -f $DEBUG && echo ..prompt
#################################################################
#	PROMPTING
#################################################################

DC=/etc/DIR_COLORS
LC=$DC.lightbgcolor
ZC=$DC.256color

		alias	LT='eval $(dircolors)'
test -f $DC &&	alias	DK='eval $(dircolors /etc/DIR_COLORS)'
test -f $LC &&	alias	LT='eval $(dircolors /etc/DIR_COLORS.lightbgcolor)'
test -f $ZC &&	alias	DZ='eval $(dircolors /etc/DIR_COLORS.256color)'

#################################################################
#	Console Initialization
#################################################################

alias	fgh='echo $FG $BG $HI'

LT					# Always LITE now

if	test -x /usr/bin/systemctl	# R7, C7, new
then	printf '\e[0;30;47m\e[8]\e2J'	# Black on Bold White if New
else	printf '\e[0;30;47m\e[8]\e2J'	# Black on Norm White if Old
fi

case $(tty) in
(/dev/ttys*)	: echo MAC;;
(/dev/pts/*)	: echo PSEUDO;;
(/dev/tty*)	: echo LINUX CONSOLE
	for FONT in sun12x22.psfu.gz latarcyrheb-sun32.psfu.gz ter-132b.psf.gz
	do
		test -f /lib/kbd/consolefonts/$FONT &&
		setfont                       $FONT
	done
	$RBJ/bin/hue 7 cc cc cc;	# Normal ia AA AA AA
#OLD	$RBJ/bin/hue f bb 77 33; $RBJ/bin/hue 7 cc cc cc;
#OLD	$RBJ/bin/hue 0 cc cc cc; $RBJ/bin/hue 7 00 00 00;
	;;
esac

#D=$(id -u)				# Linux
ID=$(id | sed 's/(.*//;s/.*=//')	# who needs this?

((BG %= 6))			# BG in {0..5}
((BG++))			# BG in {1..6}

if	test -w /		# root
then	HI="1;7" FG=0;;		# Bold Color on Black
else	HI=1     FG=7;;		# Bold While on Color
esac

PS81=': \t \[\e[${HI};3$FG;4${BG}m\]{\u@\h:\l}\[\e[m\] \w ;\n'
PS82=': [\#:$?:\j]-\$; '

PS91=': \t [\#:$?:\j] \w;\n'
PS92=': \[\e[${HI};3$FG;4${BG}m\]{\u@\h:\l}\[\e[m\] \$; '

case $DISPLAY in
(:0*)	setxkbmap -option					   # no opts
####	setxkbmap -option ctrl:nocaps -option shift:both_capslock  # good
	setxkbmap -option ctrl:nocaps -option shift:both_shiftlock # better
	resize > /dev/null
	xmodmap -e 'pointer = 1 3 2'
esac

#################################################################
#	This part should go inside the last ESAC
#################################################################

if	test -f $HOME/.xsession-errors.NEVER
then	alias ssh='ssh -e^'			# First Blood
	test -w / &&
	PS1="$PS91$PS92" BG=1 FG=3 HI=1 ||
	PS1="$PS91$PS92" BG=4 FG=6 HI=1
else	PS1="$PS81$PS82"			# Normal
fi

#################################################################
