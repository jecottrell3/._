function c() { cd    $* && ls -FAC; }
function u() { cd ../$* && ls -FAC; }
function s() { cd $(echo "$PWD" | sed "s%$1%$2%"); }

function loudly() { echo "$@"; eval "$@"; }
function npv() { while sleep 10; do pkill npviewer.bin; done & }

