test -f .debug && echo .domain
# $Id$
#################################################################
#	Do Domain Specific Customization
#################################################################

  HOST=$(hostname -s)
DOMAIN=$(hostname -d)
  FQDN=$(hostname -f)
    IP=$(hostname -i)

export H=$HOST D=$DOMAIN C=cit.nih.gov N=nih.gov

case $FQDN in
(*.homerj)
#       For Cloning CDs
	alias	L='lsof /dev/scd0'
	alias	P='pkill kio_audio'
	alias	K='k3b'
	alias	S='pm-suspend'
	;;
(*.nih.gov)
	export	BASE=ou=NIH,OU=AD,DC=NIH,DC=gov

	#alias	lds="ldapsearch -b $BASE -h ldapad.nih.gov"
	#alias	ldx="ldapsearch -b $BASE -h strudel.cit.nih.gov -x"

	export	JRE6=java-1.6.0-openjdk
	export	JDK6=java-1.6.0-openjdk-devel
	export	JRE7=java-1.7.0-openjdk
	export	JDK7=java-1.7.0-openjdk-devel

	alias	dcb='cp system-auth-dcb system-auth'
	alias	ssd='cp system-auth-ssd system-auth'
	alias	only='cp sssd.only sssd.conf'
	alias	both='cp sssd.both sssd.conf'

	export	QQ=/public/htdocs/rome.cit.nih.gov
	export	QK=$QQ/ks
	export	QY=$QQ/yum
	export	QC=$QY/CentOS
	export		C5=$QC/5/x86_64/os
	export		C6=$QC/6/x86_64/os
	export		C7=$QC/7/x86_64/os
	export	QF=$QY/Fedora
	export		F19=$QF/19/x86_64/os
	export		F20=$QF/20/x86_64/os
	export	QR=$QY/RedHat
	export		R6=$QR/6/x86_64/os
	export		R7=$QR/7/x86_64/os
	export	QU=$QY/Ubuntu
	export	QD=$QY/DCB
	export		D5=$QD/CentOS/5/x86_64
	export		D6=$QD/CentOS/6/x86_64
	export		D7=$QD/CentOS/7/x86_64
	export		D19=$QD/Fedora/19/x86_64
	export		D20=$QD/Fedora/20/x86_64

	export	TFTP=/var/lib/tftpboot
	export	MENU=$TFTP/pxelinux.cfg
	export	IMGS=$TFTP/images

	alias qaj='rpm -qa j\* | sort'

	for dir in /xxx/opt/openssh-dcb-5.?p1/bin
	do
		test -d $dir || continue
		case :$PATH: in
		(*:$dir:*)     continue;;
		(*)             PATH=$dir:$PATH;;
		esac
	done

	alias	pc='polka circulate'

	export  VP=/var/polka
	export          VPE=$VP/etc
	export          VPC=$VP/conf
	export  PRINTER=chessie
	export  LPDEST=$PRINTER
	;;
(*)	: not special;;
esac

export	RD=/etc/reader.conf;	RO="$RD.d/openct.conf"
alias	C="cat $RD"		V="vi $RO"
alias	U=lsusb			L="lsof /dev/bus/usb/???/???"
alias	Z='C;P2;O2;L'

soe()
{
	OPTS=$-
	set "$@"
	file=$1; shift
	script $file -c "oneach -aSp $*"
	set $OPTS
}

#################################################################
