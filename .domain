test -f .debug && echo .domain
# $Id$
#################################################################
#	Do Domain Specific Customization
#################################################################

  HOST=$(hostname -s)
DOMAIN=$(hostname -d)
  FQDN=$(hostname -f)
    IP=$(hostname -i)

export H=$HOST D=$DOMAIN

case $FQDN in
(*.homerj)
#       For Cloning CDs
	alias	L='lsof /dev/scd0'
	alias	P='pkill kio_audio'
	alias	K='k3b'
	alias	S='pm-suspend'
	;;
(*.nih.gov)
	# moved from .bash_profile
	for dir in /opt/openssh-dcb-5.8p1/bin
	do
		test -d $dir || continue
		case :$PATH: in
		(*:$dir:*)     continue;;
		(*)             PATH=$dir:$PATH;;
		esac
	done

	alias	k0='ssh-add -e opensc-pkcs11.so' 
	alias	k1='ssh-add -s opensc-pkcs11.so' 
	alias	k2='k0;k1'
	alias	k3='k4;k5'
	alias	k4='ssh-add -e libcoolkeypk11.so' 
	alias	k5='ssh-add -s libcoolkeypk11.so' 
	alias	pc='polka circulate'

	export  VP=/var/polka
	export          VPE=$VP/etc
	export  PRINTER=chessie
	export  LPDEST=$PRINTER
	;;
(*)	: not special;;
esac

#################################################################
