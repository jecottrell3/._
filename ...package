alias	ym=ypmatch	yw='ypwhich -m'
alias	yb=ypbind	ys=ypset
alias	yv=ypserv	yo=yppoll
alias	yu=yppush	yx=ypxfr
alias	yg=ypgrep

alias	Y=ypgrep	W='ypwhich -m'
alias	C=ypcat		K='ypcat -k'

function ypgrep
{
	typeset map=$1; shift
	case $map in
	(auto*) ypcat -k $map;;
	(*)     ypcat    $map;;
	esac | grep "$@"
}
		}

