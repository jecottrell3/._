#! /bin/sh
HOST=${1?'missing HOST'}
LABEL=${2?'missing LABEL'}
OS=${3?'missing OS'}

for TYPE in core base x11 dev src kde gno win
do
	echo Making  $HOST-$LABEL-$OS-$TYPE.m4
	cat <<-EOF > $HOST-$LABEL-$OS-$TYPE.m4
		\`#' BEGIN __file__
		include(\`Host/$HOST')dnl
		include(\`Type/$TYPE')dnl
		include(\`OS/$OS')dnl
		\`#' END   __file__
EOF
	echo Making  $HOST-LV-$OS-$TYPE.m4
	cat <<-EOF > $HOST-LV-$OS-$TYPE.m4
		\`#' BEGIN __file__
		include(\`Host/$HOST')dnl
		include(\`Type/$TYPE')dnl
		include(\`OS/$OS')dnl
		define(\`LABEL', \`LV')dnl
		\`#' END   __file__
EOF
done
