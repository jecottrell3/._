test -f $DEBUG && echo .prompt
#################################################################
#	PROMPTING
#################################################################

test -f          /etc/DIR_COLORS.lightbgcolor &&
eval $(dircolors /etc/DIR_COLORS.lightbgcolor)

alias	DK='eval $(dircolors /etc/DIR_COLORS)'
alias	LT='eval $(dircolors /etc/DIR_COLORS.lightbgcolor)'
alias	DZ='eval $(dircolors /etc/DIR_COLORS.256color)'

case $(tty) in
(/dev/ttys*)	: echo MAC
		LT=0 DK=1;;	# lite MAC
(/dev/tty*)	: echo TTY
		LT=1 DK=0
		LT=0 DK=1
	eval $(ssh-agent)
	$RBJ/bin/hue f cc 88 44; # $RBJ/bin/hue 8 00 00 00;
	$RBJ/bin/hue 0 cc cc cc; $RBJ/bin/hue 7 00 00 00;
	test -f /lib/kbd/consolefonts/sun12x22.psfu.gz &&
	setfont                       sun12x22.psfu.gz
# also lite	test -f          /etc/DIR_COLORS &&
# also lite	eval $(dircolors /etc/DIR_COLORS)
		;;	# dark 
(/dev/pts/*)	: echo PSEUDO
		LT=0 DK=1;;	# lite 
esac

#D=$(PATH=/usr/local/bin:$PATH id -u)
#D=$(id | sed 's/).*//;s/.*)//')
ID=$(id | sed 's/(.*//;s/.*=//')
# BG=$SHLVL
# BG=$(tty | tr -dc 0123456789)
# BG=$RANDOM
((BG %= 6))
((BG++))

case $BG in
(*)		HI=1 FG=7;;	# lite BG
([267])		HI=0 FG=0;;	# lite BG
([01345])	HI=1 FG=7;;
esac

case $ID.$BG in
(0.*)	FG=7	HI="7;1";;
(0.[2367])	HI="7;1";;
(0.[0145])	HI="7";;	# dark BG
esac

PS81=': \t \[\e[${HI};3$FG;4${BG}m\]{\u@\h:\l}\[\e[m\] \w ;\n'
PS82=': [\#:$?:\j]-\$; '

PS9=': \t [\#:$?:\j] \w;\[
\]: \[\e[${HI};3$FG;4${BG}m\]{\u@\h:\l}\[\e[m\] \$; '

if test -d /Applications
then	alias ssh='ssh -e^'
	PS1="$PS9" BG=4 FG=6 HI=1; alias ssh='ssh -e^'
else	PS1="$PS81$PS82"
fi

#################################################################
