
test -f .debug && echo .prompt
#################################################################
#	PROMPTING
#################################################################

test -f          /etc/DIR_COLORS.lightbgcolor &&
eval $(dircolors /etc/DIR_COLORS.lightbgcolor)

case $(tty) in
(/dev/tty*)	LT=1 DK=0
	$RBJ/bin/hue 0 ff ff ff; $RBJ/bin/hue 7 00 00 00;
	test -f          /etc/DIR_COLORS &&
	eval $(dircolors /etc/DIR_COLORS)
		;;	# dark 
(/dev/pts/*)	LT=0 DK=1;;	# lite 
esac

#D=$(PATH=/usr/local/bin:$PATH id -u)
#D=$(id | sed 's/).*//;s/.*)//')
ID=$(id | sed 's/(.*//;s/.*=//')
# BG=$SHLVL
# BG=$(tty | tr -dc 0123456789)
# BG=$RANDOM
((BG %= 6))
((BG++))
case $BG in
([267])		HI=0 FG=0;;	# lite BG
([01345])	HI=1 FG=7;;
esac

case $ID.$BG in
(0.[2367])	HI="7;1";;
(0.[0145])	HI="7";;	# dark BG
esac

PS8=': \t \[\e[${HI};3$FG;4${BG}m\]{\u@\h:\l}\[\e[m\] \w ;
: [\#:$?:\j]-\$; '

PS9=': \t [\#:$?:\j] \w;
: \[\e[${HI};3$FG;4${BG}m\]{\u@\h:\l}\[\e[m\] \$; '

PS1=$PS8

#################################################################
