#! /bin/sh

case $# in
(*)	REV='27 7';;
(0)	REV='25';;
(*)	REV='25 5';;
esac

C=(K R G Y B M C W)
M=(D L [5]=L [7]=R [25]=D [27]=N)

for BG in 0 1 2 3 4 5 6 7
do
for HI in 1
do
for BL in $REV
do
for FG in 0 1 2 3 4 5 6 7
do
    printf "\e[$HI;3${FG};4${BG};${BL}m${M[$HI]}${C[$FG]}${M[$BL]}${C[$BG]} " | tr -d \\012
done
done
printf '\n'
done
done
