#! /bin/sh

COLOR=(k r g y b m c w K R G Y B M C W)

for RV in 27 7
do
for BG in 0 1 2 3 4 5 6 7
do
for HI in 0 1
do
for FG in 0 1 2 3 4 5 6 7
do
	case $RV in
	(27)	((FC=HI*8+FG)); ((BC=BG));;
	(7)	((BC=HI*8+FG)); ((FC=BG));;
	esac
	FN=${COLOR[$FC]} BN=${COLOR[$BC]}
	printf '\e[%d;3%d;4%d;%dm %s%s ' $HI $FG $BG $RV $FN $BN
done
done
printf '\e[m\n'
done
done
