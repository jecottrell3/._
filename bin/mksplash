#! /usr/bin/perl

sub fixline
{
	local($r, $g, $b) = @_;
	local($l, $m, $h);
	return unless /^(". c #)(..)(..)(..)(".*)$/;
# warn("args: $r, $g, $b, $_");
	($a, $l, $m, $h, $z) = ($1, $2, $3, $4, $5);
# warn("vars: $a, $l, $m, $h, $z\n");
	eval("\$r=\$$r");
	eval("\$g=\$$g");
	eval("\$b=\$$b");
# warn("repl: $r, $g, $b\n");
	$_ = "$a$r$g$b$z\n";
}

open(STDIN, "<splash.xpm") or die;

for $r (qw(l m h)) {
for $g (qw(l m h)) {
for $b (qw(l m h)) {
	$rgb="$r$g$b";
	open($rgb, ">xpm.$rgb") or die;
}}}

while ($line = <>) {

for $r (qw(l m h)) {
for $g (qw(l m h)) {
for $b (qw(l m h)) {
	$_ = $line;
	$rgb="$r$g$b";
	fixline($r, $g, $b);
	print $rgb $_;
}}}
}
